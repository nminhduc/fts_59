<table class="table table-striped table-hover table-style">
  <thead>
    <th class="th-style"><p><%= t "user.status" %></p></th>
    <th class="th-style"><p><%= t "user.duration" %></p></th>
    <th class="th-style"><p><%= t "user.question_number" %></p></th>
    <th class="th-style"><p><%= t "user.point" %></p></th>
    <th class="th-style"></th>
  </thead>
  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td class="td_style"><%= lesson.status %></td>
        <td class="td_style"><%= lesson.subject.duration %></td>
        <td class="td_style"><%= lesson.subject.question_number %></td>
        <td class="td_style"><%= lesson.point %></td>
        <td class="td_style"><%= link_to t("user.edit"), lesson_path(lesson) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
